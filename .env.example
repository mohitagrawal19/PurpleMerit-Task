NODE_ENV=production
PORT=3000
JWT_SECRET=change-me-to-strong-secret-in-production
JWT_REFRESH_SECRET=change-me-to-strong-refresh-secret
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# MongoDB Atlas - Use your cloud connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/workspace_db?retryWrites=true&w=majority

# Redis Cloud or equivalent
REDIS_URL=redis://default:password@redis-url:6379

# PostgreSQL (optional)
DATABASE_URL=postgresql://user:password@localhost:5432/workspace_db

CORS_ORIGIN=https://yourdomain.com

LOG_LEVEL=info
